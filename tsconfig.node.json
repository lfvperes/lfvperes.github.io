{
  "compilerOptions": {
    "incremental": true, // Add this line
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022", // Change to a valid target
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "erasableSyntaxOnly": true, // Remove experimental option
    "noFallthroughCasesInSwitch": true
    // "noUncheckedSideEffectImports": true // Remove experimental option
  },
  "include": ["vite.config.ts", "tailwind.config.ts"] // Add tailwind.config.ts here
}